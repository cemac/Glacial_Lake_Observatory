
{% extends 'layout.html.j2' %}

{% block body %}
<div style="width: 50%">
  <h1>{{title}}</h1>
<hr>
{% from "includes/_formhelpers.html.j2" import render_field %}
<form action=/register/{{tableClass}} method="POST">
  {% for field in form %}
  <div class="form-group">
    {{render_field(field, class_="form-control")}}
  </div>
  {% endfor %}
  {% if tableClass == 'Users' %}
  <hr>
  <p>
    Passwords must be at least 8 characters long. You will recieve an email when your account is approved, this could take a few days.
  </p>
  {% endif %}
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<hr>
 
{% endblock %}